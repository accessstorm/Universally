{
    "version": 2,
    "builds": [
        {
            "src": "ai_interview/manage.py",
            "use": "@vercel/static-build",
            "config": { "zeroConfig": true }
        }
    ],
    "routes": [
        { "src": "/static/(.*)", "dest": "/static/$1" },
        { "src": "/(.*)", "dest": "gunicorn ai_interview.wsgi:application" }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "ai_interview.settings",
        "PYTHONUNBUFFERED": "1"
    }
}
